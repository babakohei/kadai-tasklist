<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div>
        <p><<%= link_to task.id, edit_task_path(task) %>>Task:<%= task.content %> Status:<%= task.status %></p>
      </div>
      <div>
        <% if current_user == task.user %>
          <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
      </div>
    </li>
  <% end %>
  <% paginate tasks %>
</ul>