<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= f.label :content, 'タスク名' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["finished","finished"],["notstarted","notstarted"]] %>
  
  <%= f.submit '登録' %>
<% end %>